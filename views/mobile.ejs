  <style>
    /* Add this CSS to your cybersecurity.css file */

body {
  font-family: "lato";
  margin: 0;
  padding: 0;
  background-color: #f8f9fa;
}

header {
  background-color: #007bff;
  padding: 20px;
  text-align: center;
  color: #ffffff;
}

nav {
  background-color: #dadada;
  padding: 20px;
  text-align: center;
}

nav a {
  color: #443535;
  text-decoration: none;
  padding: 10px;
  margin: 0 10px;
  font-size: 20px;
  transition: color 0.3s;
}

nav a:hover {
  color: #007bff;
}

nav a.signup, nav a.login {
  text-decoration: none;
  color: #ffffff;
  padding: 7px 10px;
  border-radius: 10px;
  transition: background-color 0.3s;
  font-size: medium;
  margin: 7px;
}

nav a.signup:hover, nav a.login:hover {
  background-color: #0056b3;
}

section, .about-section {
  max-width: 800px;
  margin: 50px auto;
  padding: 20px;
  background-color: #ffffff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  text-align: center;
  opacity: 24;
}

h1 {
  color: #057ef8;
}

p {
  color: #555555;
  font-size: large;
}

.cta-button {
  display: inline-block;
  background-color: #007bff;
  color: #ffffff;
  padding: 10px 20px;
  font-size: 18px;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s;
}

.cta-button:hover {
  background-color: #0056b3;
}

.about-image {
  max-width: 100%;
  border-radius: 8px;
  margin-bottom: 20px;
}

footer {
  background-color: #dadada;
  color: #ffffff;
  padding: 20px 0;
  text-align: center;
}

#roadmapSection {
  max-width: 800px;
  margin: 50px auto;
  text-align: left;
}

.milestone {
  margin-bottom: 30px;
}

.milestone img {
  max-width: 100px;
  margin-bottom: 10px;
  border-radius: 50%;
  object-fit: cover;
  display: flex;
  justify-content: center;
  align-items: center;
}

.milestone h3 {
  color: #057ef8;
}

.milestone p {
  color: #555555;
  font-size: large;
}
@media only screen and (max-width: 600px) {
    nav a {
      display: block;
      text-align: center;
      padding: 10px 0;
    }
  }
  </style>
  <script src="https://unpkg.com/gsap@3.9.1/dist/gsap.min.js"></script>
</head>
<body>

  <header>
    <h1>Your Learning Platform</h1>
    <p>Explore and Expand Your Knowledge</p>
  </header>

  <nav>
